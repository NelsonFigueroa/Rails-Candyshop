<h2>Generate new candy</h2>

<%= link_to("<< Back to Shops List", shops_path, :class => 'back-link') %>

<br><br>

<%= form_for(@candy) do |f| %>

<table summary="Candy form fields">
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Calories</th>
    <td><%= f.text_field(:calories) %></td>
  </tr>
  <tr>
    <th>Amount</th>
    <td><%= f.text_field(:amount) %></td>
  </tr>
</table>

<%= f.submit("Generate") %>

<% end %>
