<h2>Generate new candy</h2>

<%= link_to("<< Back to Shop", shop_path(:id => @shop.id), :class => 'back-link') %>

<br><br>
Generate new candy in shop: <%= @shop.name %> <br>

<%= form_for(@candy, :url => candies_path(:shop_id => @shop.id)) do |f| %>

<table summary="Candy form fields">
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Amount</th>
    <td><%= f.text_field(:amount) %></td>
  </tr>
</table>

<%= f.submit("Generate", :class => 'btn btn-secondary') %>

<% end %>
