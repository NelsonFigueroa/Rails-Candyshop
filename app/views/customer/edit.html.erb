<!-- Navbar -->
<%= render partial: "navbar" %>
<br>

<div class="container">
  <div class="card">
    <div class="card-header">
      <h3>Add Money</h3>
    </div>
    <div class="card-body justify content center">
      <div class="form-group">
        <%= form_for(@customer) do |f| %>
        Amount: <%= f.number_field(:money, :step => 0.01, :class => 'form-control') %>
        <small class="text-secondary">Total balance cannot exceed $1000</small>
        <br>
        <%= f.submit("Add Money", :class => 'btn btn-success') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
